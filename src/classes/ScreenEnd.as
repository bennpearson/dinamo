package classes{	import flash.display.MovieClip;	import flash.events.MouseEvent;		public class ScreenEnd extends MovieClip 	{		private var _holder_mc:MovieClip;				public function ScreenEnd() { }						public function init( holder_mc:MovieClip ):void		{			_holder_mc = holder_mc;						enable_buttons();		}						public function setup_text( theXML:XML, lang:String ):void		{			end_title.text = theXML..end_title;						replay_btn.btn_txt.text = theXML..replay_btn;			menu_btn.btn_txt.text = theXML.menu_btn;		}								private function enable_buttons():void		{			replay_btn.buttonMode = menu_btn.buttonMode = true;			replay_btn.mouseChildren = menu_btn.mouseChildren = false;						replay_btn.addEventListener( MouseEvent.CLICK, play_game );			menu_btn.addEventListener( MouseEvent.CLICK, show_menu );		}								private function disable_buttons():void		{			replay_btn.buttonMode = menu_btn.buttonMode = false;						replay_btn.removeEventListener( MouseEvent.CLICK, play_game );			menu_btn.removeEventListener( MouseEvent.CLICK, show_menu );		}								private function play_game( ev:MouseEvent ):void		{			disable_buttons();						_holder_mc.change_screen( ScreenConstants.SCREEN_GAME );			}											private function show_menu( ev:MouseEvent ):void		{			disable_buttons();						_holder_mc.change_screen( ScreenConstants.SCREEN_INTRO );			}						public function clean_up():void		{			disable_buttons();		}	}	}