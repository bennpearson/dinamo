package classes{	import flash.display.MovieClip;	import flash.events.MouseEvent;		public class ScreenIntro extends MovieClip 	{		private var _holder_mc:MovieClip;				public function ScreenIntro() 		{			// constructor code		}						public function init( holder_mc:MovieClip ):void		{			_holder_mc = holder_mc;			enable_buttons();		}						public function setup_text( theXML:XML, lang:String ):void		{			intro_title.text = theXML..intro_title;						play_btn.btn_txt.text = theXML..play_btn;			instr_btn.btn_txt.text = theXML..instr_btn;						lang_btn.btn_txt.text = theXML..lang_btn;		}								private function enable_buttons():void		{			play_btn.buttonMode = instr_btn.buttonMode = lang_btn.buttonMode =  true;			play_btn.mouseChildren = instr_btn.mouseChildren = lang_btn.mouseChildren =  false;						play_btn.addEventListener( MouseEvent.MOUSE_UP, play_game );			instr_btn.addEventListener( MouseEvent.CLICK, show_instructions );			lang_btn.addEventListener( MouseEvent.CLICK, change_lang );		}								private function disable_buttons():void		{			play_btn.buttonMode = instr_btn.buttonMode = lang_btn.buttonMode = false;						play_btn.removeEventListener( MouseEvent.CLICK, play_game );			instr_btn.removeEventListener( MouseEvent.CLICK, show_instructions );			lang_btn.removeEventListener( MouseEvent.CLICK, change_lang );		}										private function play_game( ev:MouseEvent ):void		{			disable_buttons();						_holder_mc.change_screen( ScreenConstants.SCREEN_GAME );			}										private function show_instructions( ev:MouseEvent ):void		{		}						private function change_lang( ev:MouseEvent ):void		{			if( _holder_mc.language == "en" )			{				_holder_mc.change_lang("cy");			}			else			{				_holder_mc.change_lang("en");			}		}						public function clean_up():void		{			disable_buttons();		}	}	}