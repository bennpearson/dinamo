package classes {		import flash.events.MouseEvent;	import flash.display.MovieClip;	import flash.utils.Timer;	import flash.events.TimerEvent;		public class gameEngine extends MovieClip {				//Global timer variables		public var ticker:Timer;		public var tickerNextLevel:Timer;				//This is where the aplication kicks in, so the event listeners are placed here		//to find out which button is clicked		public function gameEngine() {			//Attach event listeners to the object's on the screen to see which was clicked			//Just change the element names to the ones that are on that level.			btnCar.addEventListener(MouseEvent.CLICK, checkWhatWasClicked);			btnBoot.addEventListener(MouseEvent.CLICK, checkWhatWasClicked);			btnLamp.addEventListener(MouseEvent.CLICK, checkWhatWasClicked);			btnVan.addEventListener(MouseEvent.CLICK, checkWhatWasClicked);			lblWrong.visible = false;			lblCorrect.visible = false;		}				//This is the function that gets called when a button is clicked		public function checkWhatWasClicked(event:MouseEvent):void		{				  if(event.target.name == "btnCar") {			trace("Car Selected");						//Show the success label			lblCorrect.visible = true;						//Show the success message for 3 seconds then move to			//the next set of letters			startNextLevelTimer();		  }		  		  else {			  //labelMessage.visible = true;			  //labelMessage.content = "Try Again!";			  trace("Wrong Answer");			  lblWrong.visible = true;			  startTheTimer();		  }		}		///////////////////////////////////////////////////									   ////////		CORRECT ANSWER SELECTED		   ////////									   ////	///////////////////////////////////////////////								//Show the success label for 3 seconds then move to the 		//next set of letters on the timeline			public function startNextLevelTimer():void		{			tickerNextLevel = new Timer(3000);			tickerNextLevel.addEventListener(TimerEvent.TIMER, nextLevel);			tickerNextLevel.start();		}				public function nextLevel():void		{			tickerNextLevel.stop();			gotoAndStop(2);		}		///////////////////////////////////////////////////									   ////////		WRONG ANSWER SELECTED		   ////////									   ////	///////////////////////////////////////////////				//This function hides the wrong item selected label after it		//has been displayed for 3 seconds letting the user carry on playing		public function startTheTimer():void		{			// creates a Timer that fires once every 3 seconds.			//Change this if you think it is too long after testing			//1 Second = 1000			//2 Seconds = 2000			ticker = new Timer(3000);			// designates the onTick() method to handle Timer events			ticker.addEventListener(TimerEvent.TIMER, hideLabel);			// starts the clock ticking			ticker.start();		}				public function hideLabel(event:TimerEvent):void		{			lblWrong.visible = false;			ticker.stop();		}	}	}